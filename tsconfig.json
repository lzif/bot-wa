{
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"types": ["node"],
		"lib": ["ES2022", "DOM"]
	}
}
